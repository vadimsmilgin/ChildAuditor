 <aura:component implements="force:hasRecordId,flexipage:availableForAllPageTypes">
    <aura:registerEvent name="showComment" type="c:showComment"/>
    <aura:attribute type="String" name="message" default=""/>
    <div class="div">
        <div class="textAreaDiv">
            <lightning:textarea name="message" class="tallTextArea" label="Post" placeholder="type your message" value="{!v.message}"/>   
        </div>
        <div class="buttonDiv">
            <lightning:button variant="brand" label="Share" onclick="{! c.postMessage }" disabled="{!v.message == ''}"/>
        </div>
    </div>
</aura:component>	